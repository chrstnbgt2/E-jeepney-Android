<!-- res/drawable/rounded_corners.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set solid color to black -->


    <!-- Set corner radius to 50dp -->
    <corners android:radius="5dp" />

    <!-- Optional: You can add padding if needed -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />

    <!-- Optional: Add a stroke (border) -->
    <stroke
        android:width="1dp"
        android:color="@android:color/black" /> <!-- White border for contrast, optional -->
</shape>
