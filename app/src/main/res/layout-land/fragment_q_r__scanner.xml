<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    tools:context=".QR_ScannerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="51dp"
        android:layout_height="59dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_backl"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginTop="40dp"
        android:text="@string/qr_code_scanner"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <View
        android:id="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="130dp"/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_passenger_qr_code"
        android:layout_marginTop="150dp"
        android:layout_marginStart="14dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <!-- Buttons -->

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="302dp"
        android:layout_height="359dp"
        android:layout_gravity="center"
        android:src="@drawable/qr_scanner"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_btn3"
            android:text="@string/create_qr_code"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:ignore="ButtonStyle" />

        <!-- Delete Account Button -->
        <Button
            android:id="@+id/btn_delete_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_btn6"
            android:text="@string/upload_qr_code"
            android:textColor="@color/white"
            tools:ignore="ButtonStyle" />
    </LinearLayout>
</FrameLayout>
    </ScrollView>
</FrameLayout>